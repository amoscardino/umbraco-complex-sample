@model MovieSearchFormModel

<form class="border rounded shadow mb-4 p-3">
    <div class="row">
        <div class="col">
            <label asp-for="SearchTerm" class="visually-hidden">Search Term</label>
            <input asp-for="SearchTerm" class="form-control" />
        </div>

        <div class="col-2 d-flex flex-column justify-content-end">
            <button type="submit" class="btn btn-primary">
                Search
            </button>
        </div>
    </div>
</form>
